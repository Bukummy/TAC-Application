<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team2.danielmedina.tac" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Categories"
            android:label="@string/title_activity_categories"
            android:parentActivityName=".MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.danielmedina.tac.MainMenuActivity" />
        </activity>
        <activity
            android:name=".CategoryAnnouncement"
            android:label="@string/title_activity_category_announcement"
            android:parentActivityName=".Categories" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.danielmedina.tac.Categories" />
        </activity>
        <activity
            android:name=".FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName=".MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.danielmedina.tac.MainMenuActivity" />
        </activity>
        <activity
            android:name=".showAnnouncement"
            android:label="@string/title_activity_show_announcement">


        </activity>
        <activity
            android:name=".Tags"
            android:label="@string/title_activity_tags"
            android:parentActivityName=".MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.danielmedina.tac.MainMenuActivity" />
        </activity>
        <activity
            android:name=".TagAnnouncements"
            android:label="@string/title_activity_tag_announcements"
            android:parentActivityName=".Tags" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.danielmedina.tac.Tags" />
        </activity>
    </application>

</manifest>
